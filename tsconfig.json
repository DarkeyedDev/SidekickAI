{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "outDir": "out",
    "rootDir": "src",
    "lib": ["ES2020"],
  },
   "include": ["src/**/*"],
  "exclude": ["test_compilation.ts"]
}

